{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitReturns": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "useDefineForClassFields": true
    },
    "include": ["./src/**/*"]
}
